// Bubble Sort Algorithm Test
// Tests: arrays, nested loops, array indexing, comparisons, swaps

DECLARE n <- 10: INTEGER
CONSTANT n

DECLARE arr : ARRAY[1:10] OF INTEGER
DECLARE i : INTEGER
DECLARE j : INTEGER
DECLARE temp : INTEGER
DECLARE swapped : BOOLEAN

// Initialize array with unsorted values

FOR i <- 1 TO n
    arr[i] <- ROUND(RANDOM() * 100, 0)
NEXT i

OUTPUT "Original array:"
FOR i <- 1 TO n
    OUTPUT arr[i], " "
NEXT i
OUTPUT ""

// Bubble Sort Algorithm
FOR i <- 1 TO n - 1
    swapped <- FALSE
    FOR j <- 1 TO n - i
        IF arr[j] > arr[j + 1] THEN
            // Swap elements
            temp <- arr[j]
            arr[j] <- arr[j + 1]
            arr[j + 1] <- temp
            swapped <- TRUE
        ENDIF
    NEXT j
NEXT i

OUTPUT "Sorted array:"
FOR i <- 1 TO n
    OUTPUT arr[i], " "
NEXT i
OUTPUT ""

// Verify sorting
OUTPUT "Verification:"
FOR i <- 1 TO n - 1
    IF arr[i] > arr[i + 1] THEN
        OUTPUT "ERROR: Array is not sorted!"
    ENDIF
NEXT i
OUTPUT "Array is correctly sorted!"

